<script>
    $('.ajax-loader').hide();
</script>

<form class="form-inline contact-form">
    <div class="form-group ">        
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="input-group">
                    <label for="name" class="sr-only">Name</label>
                    <div class="input-group-addon">
                        <i class="glyphicon glyphicon-user"></i>
                    </div>
                    <input type="text" name="name" placeholder="Name" size="80" class="form-control" id="name" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="input-group">
                    <label for="email" class="sr-only">Email Address</label>
                    <div class="input-group-addon">
                        <i class="glyphicon glyphicon-envelope"></i>
                    </div>
                    <input type="email" name="email" placeholder="Email Address" size="80" class="form-control" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4"></div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="glyphicon glyphicon-book"></i>
                    </div>
                    <input type="text" name="subject" placeholder="Subject" size="80" class="form-control" id="subject" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4"></div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    @*<label class="control-label" for="message">Message</label>*@
                    <textarea type="text" name="message" placeholder="Message" size="80" class="form-control" id="message" rows="10"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <button type="button" class="btn btn-lg submit-email">Submit</button>
            </div>
        </div>
        @*<img class="ajax-loader" src="~/Content/images/icons/ajax-loader.gif" alt="Sending..." onload="this.width /= 2;" />*@
    </div>
</form>
